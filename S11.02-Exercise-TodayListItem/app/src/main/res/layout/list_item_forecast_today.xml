<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tv_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        tools:text="@string/tomorrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_condition_icon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:contentDescription="@string/a11y_forecast_icon"
        app:layout_constraintBottom_toBottomOf="@+id/tv_max_temp"
        app:layout_constraintEnd_toStartOf="@+id/tv_max_temp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_max_temp"
        app:srcCompat="@drawable/art_clear" />

    <TextView
        android:id="@+id/tv_max_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_condition_icon"
        app:layout_constraintTop_toBottomOf="@+id/tv_day"
        tools:text="@string/a11y_high_temp" />

    <TextView
        android:id="@+id/tv_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        tools:text="@string/condition_522"
        app:layout_constraintEnd_toEndOf="@+id/iv_condition_icon"
        app:layout_constraintStart_toStartOf="@+id/iv_condition_icon"
        app:layout_constraintTop_toBottomOf="@+id/iv_condition_icon" />

    <TextView
        android:id="@+id/tv_min_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        tools:text="@string/a11y_low_temp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_condition"
        app:layout_constraintEnd_toEndOf="@+id/tv_max_temp"
        app:layout_constraintStart_toStartOf="@+id/tv_max_temp"
        app:layout_constraintTop_toTopOf="@+id/tv_condition" />

</android.support.constraint.ConstraintLayout>